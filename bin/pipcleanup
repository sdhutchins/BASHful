#!/bin/bash
# ------------------------------------------------------------------
# [Shaurita Hutchins] pipcleanup
#          This cleans up or deletes the pip cache.
#

DIR=~/.cache/pip/

if [ -d "$DIR" ]; then
	echo "Info: Local pip cache does not exist."
else
	echo "Info: Local pip cache exists."
	rm -rf "$DIR"
	echo "Successfully deleted local pip cache."
fi
